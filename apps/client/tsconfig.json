{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": false,
    "importHelpers": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "tslib": [
        "../../node_modules/tslib/tslib.d.ts"
      ],
      "*": [
        "types/*"
      ],
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.*/**/*.ts",
    "src/**/*.*/**/*.tsx",
    "src/**/index.ts",
    "src/components/1-atoms/index.ts",
    "src/components/2-molecules/index.ts",
    "src/components/3-organisms/index.ts",
    "src/components/4-templates/index.ts",
    "src/components/5-pages/index.ts",
    "src/components/6-system/index.ts",
    "src/contexts/index.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}