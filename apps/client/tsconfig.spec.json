{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/out-tsc",
    "module": "NodeNext",
    "types": [
      "jest",
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "../../node_modules/tslib/tslib.d.ts",
      "../../node_modules/@types/styled-components/index.d.ts",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "tslib": [
        "../../node_modules/tslib/tslib.d.ts"
      ],
    }
  },
  "files": [
    "src/components/app.tsx",
    "src/components/nx-welcome.tsx"
  ],
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.d.ts",
    "src/**/*.*/**/*.ts",
    "src/**/*.*/**/*.tsx",
    "src/**/*.*/**/*.js",
    "src/**/*.*/**/*.jsx",
    "src/**/index.ts"
  ]
}